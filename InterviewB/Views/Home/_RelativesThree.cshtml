@using InterviewB.Models
@model IEnumerable<RELATIVE>
<div class="my-2 col-6 order-@(ViewBag.order)" id="relatives-three" data-order="@(ViewBag.order)">
    <div class="card border-0" >

        <p class="h3 card-header text-white bg-info text-right d-block" data-toggle="collapse" data-target="#relatives-three-body"
            aria-expanded="true" aria-controls="relatives-two-body" id="relatives-three-header">
            الأخوال والخالات
            <i class="fa fa-chevron-down persian"></i>
            <!-- Relatives Count -->

            @if (@Model != null && @Model.Count() >= 1)
            {
                <span class="badge badge-light float-left mx-5 p-2 arabic">@Model.Count()</span>
            }
            else
            {
                <span class="badge badge-light float-left mx-5 p-2">لا يوجد أخوال أو خالات</span>
            }
        </p>

        <div id="relatives-three-body" class="collapse show" aria-labelledby="relatives-three-header">
            @if (@Model != null && @Model.Count() >= 1)
            {
            <div class="card-body d-flex justify-content-center flex-wrap">
                <table class="table table-striped table-bordered table-sm">
                    <thead>
                        <tr>
                            <th class="bg-info text-center" scope="col">م</th>
                            <th class="bg-info text-center" scope="col">الأسم</th>
                            <th class="bg-info text-center" scope="col">السن</th>
                            <th class="bg-info text-center" scope="col">المؤهل</th>
                            <th class="bg-info text-center" scope="col">الوظيفة</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rel in Model)
                        {
                            <tr class="persian">
                                <!--SERIAL-->
                                <td class="text-center arabic">@(rel.SERIAL)</td>
                                <!--RELNAME-->
                                <td class="text-center">@(rel.REL_NAME)</td>
                                <!--AGE-->
                                <td class="text-center arabic">@(rel.AGE)</td>
                                <!--GRAD-->
                                <td class="text-center">@(rel.GRAD)</td>
                                <!--JOB-->
                                <td class="text-center">@(rel.JOB)</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            }

        </div>
    </div>

    </div>