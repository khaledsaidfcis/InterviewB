@using InterviewB.Models
@model InterviewB.Models.NAFSI_INFO
<div class="my-2 order-4 col-6" id="nafsi-info" data-order="4">
    <div class="card">
        <h2 class="card-header text-white text-right d-block" data-toggle="collapse" data-target="#nafsi-info-body"
            aria-expanded="true" aria-controls="nafsi-info-body" id="nafsi-info-header">
            الموقف النفسي
            <i class="fa fa-chevron-down"></i>
        </h2>

        <div id="nafsi-info-body" class="collapse show" aria-labelledby="nafsi-info-header">
            <div class="card-body">

                <!-- n1 -->
                <div class="data-block float-right text-center pl-1 persian d-block">
                    <p class="data-name font-weight-bold mb-0">النفسي</p>
                    <p class="data-value form-control  font-weight-bold arabic bg-light" id="vision">
                        @Model.N1_DATA
                    </p>
                </div>
                <!-- n2 -->
                <div class="data-block float-right text-center pl-1 persian d-block">
                    <p class="data-name font-weight-bold mb-0">نفسي زايد</p>
                    <p class="data-value form-control  font-weight-bold arabic bg-light" id="vision">
                        @Model.N2_DATA
                    </p>
                </div>
                <!-- n3 -->
                <div class="data-block float-right text-center pl-1 persian d-block">
                    <p class="data-name font-weight-bold mb-0">نفسي نهائي</p>
                    <p class="data-value form-control  font-weight-bold arabic bg-light" id="vision">
                        @Model.N3_DATA
                    </p>
                </div>
                <div class="data-block float-right text-center pl-1 persian d-block">
                    <p class="data-name font-weight-bold mb-0">ملحوظة النفسي</p>
                    <p class="data-value form-control  font-weight-bold arabic bg-light" id="vision">
                        @Model.N3_NOTE
                    </p>
                </div>


            </div>

            @if (@Model.N1_CODE != null)
            {
                <div class="medical-table">
                    <table class="table table-striped table-bordered table-sm">
                        <thead>
                            <tr>
                                <th class="bg-info" scope="col">البعد</th>
                                <th class="bg-info" scope="col">المستوي</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ndetails in ViewBag.nafsi_detailsO)
                            {
                                <tr>
                                    <!--LAGNA NAME-->
                                    <td>@((ndetails as NAFSI_DETAILS).DIM_NAME)</td>
                                    <!--LAGNA STATUS-->
                                    <td>@((ndetails as NAFSI_DETAILS).DIM_LEVEL)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>


            }
        </div>
    </div>
</div>

